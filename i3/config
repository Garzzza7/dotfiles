# KEYBOARD LAYOUT
bindsym $mod+Shift+Ctrl+e exec setxkbmap -layout us
bindsym $mod+Shift+Ctrl+p exec setxkbmap -layout pl
# exec "setxkbmap -option 'grp:ctrl_space_toggle'"

exec --no-startup-id dex --autostart --environment i3

#wallpaper
